<% if @creature.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= pluralize(@creature.errors.count, "つのエラーがあります。") %>
    </div>
    <ul>
    <% @creature.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
