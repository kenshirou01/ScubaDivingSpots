<%= stylesheet_link_tag 'views/creatures-new', 'media' => 'all', 'data-turbo-track': 'reload' %>
<% provide(:title, "新規作成") %>

<h1>新規作成</h1>

<%= form_with(model: @creature, local: true) do |form| %>
  <%= render 'shared/creature_error_messages', object: @creature %>

  <div class="field">
    <p>名前</p>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <p>時期</p>
    <%= form.text_area :periods %>
  </div>

  <div class="field">
    <p>説明</p>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <p>写真</p>
    <%= form.file_field :photo %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', creatures_path %>
